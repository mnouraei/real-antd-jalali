{
  "compilerOptions": {
    "target": "es5",
    "module": "esnext",
    "baseUrl": "./src",
    "lib": [
      "dom",
      "dom.iterable",
      "esnext"
    ],
    "allowJs": true,
    "esModuleInterop": true,
    "allowSyntheticDefaultImports": true,
    "strict": true,
    "forceConsistentCasingInFileNames": true,
    "moduleResolution": "node",
    "resolveJsonModule": true,
    "isolatedModules": true,
    "declaration": true,
    "declarationMap": true,
    "noImplicitAny": false,
    "jsx": "react",
    "outDir": "dist/esm",
    "skipLibCheck": true,
    "noFallthroughCasesInSwitch": true,
    "noEmit": true
  },
  "include": [
    "./src/**/*"
  ]
}